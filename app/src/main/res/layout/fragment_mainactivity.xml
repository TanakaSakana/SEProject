<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ViewFlipper
    android:id="@+id/switcher"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:persistentDrawingCache="animation"
    android:flipInterval="3000"
    android:outAnimation="@android:anim/fade_out"
    android:inAnimation="@android:anim/fade_in">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:src="@drawable/s4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:src="@drawable/s1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:src="@drawable/s2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:src="@drawable/s3"/>
</ViewFlipper>
</RelativeLayout>